                        </button>
                        <div class="dropdown-content">

                            <ul>
                                <li>@Html.ActionLink("Tạo Phiếu Khám", "Create", "PhieuKham")</li>
                                <li>@Html.ActionLink("Danh Sách Phiếu Khám", "Index", "PhieuKham")</li>


