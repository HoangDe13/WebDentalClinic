
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <style>
        span{
            color:black;
        }
        span a{
            color: black;
            font-size:18px;
        }
            span a:hover {
                color: black;
                text-decoration:none;
            }
        .dropbtn {
            background-color: white;
            color: black;
            padding: 13px;
            font-size: 18px;
            border: none;
            font-family: 'Times New Roman';
            font-weight: bold;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                font-weight: bold
            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                    color: #03A9F4;
                    text-decoration: none;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown:hover .dropbtn {
            color: #03A9F4;
        }

        li.fomat-hello {
            padding-top: 15px;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/main.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap.css")

    @Styles.Render("~/Content/flexslider.css")
    @Styles.Render("~/Content/jquery.fancybox.css")
    @Styles.Render("~/Content/responsive.css")
    @Styles.Render("~/Content/font-icon.css")
    @Styles.Render("~/Content/animate.min.css")
    @Styles.Render("https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", false)
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="  background-color: white; border-color: white;opacity:0.85;">
        <div class="container">
            <div class="navbar-header" style="">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dental Clinic", "Index", "Customer", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <h4 class="fomat-hello" style="text-align: right; font-family:'Times New Roman'">
               
                
                <span>Xin Chào @Session["HoTen"] &emsp;</span>|
                    <span> @Html.ActionLink("Đăng Xuất", "LogOut", "Customer") <i class="glyphicon glyphicon-log-out"></i></span>
                    
            </h4>
            <div class="navbar-collapse collapse" style="float:left">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Customer")</li>
                    <li class="dropdown">
                        <button class="dropbtn">
                            Giới Thiệu
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                            <ul>
                                <li>@Html.ActionLink("Giới Thiệu Chung", "IntroDental", "Customer")</li>
                                <li>@Html.ActionLink("Cơ Sở Vật Chất", "IntroInfrastructure", "Customer")</li>
                                <li>@Html.ActionLink("Bác sĩ", "IntroDoctor", "Customer")</li>
                            </ul>
                        </div>
                    </li>
                    <li>@Html.ActionLink("Dịch Vụ Nha Khoa", "Service", "Customer")</li>
                    <li>@Html.ActionLink("Liên Hệ", "Contact", "Customer")</li>
                    <li>@Html.ActionLink("Đặt Lịch Hẹn", "CreateLichHen", "Customer")</li>
                    <li>@Html.ActionLink("Lịch Sử Khám Bệnh", "LichSuKham", "Customer")</li>
                    <li>@Html.ActionLink("Thông Tin Cá Nhân", "Profile", "Customer")</li>

                </ul>


            </div>
        </div>
        </div>
    @RenderBody()

    <hr />

    <!-- Footer section -->
    <footer class="footer">
        <div class="container-fluid">
            <div id="map-row" class="row">
                <div class="col-xs-12">
                    <div id="map-overlay" class="col-xs-5 col-xs-offset-6">
                        <h2 style="margin-top:0;color:#fff;">Dental Clinic</h2>
                        <p style=" text-align:left;color:white"><i class="glyphicon glyphicon-map-marker"></i>115 Sư Vạn Hạnh, phường 13, Quận 10, TP.HCM</p>
                        <p style="text-align:left;color:white"><a href="mailto:NhaKhoa@gmail.com"><i class="glyphicon glyphicon-user"></i>NhaKhoa@gmail.com</a></p>

