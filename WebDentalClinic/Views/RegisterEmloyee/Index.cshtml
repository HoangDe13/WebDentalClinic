@model IEnumerable<WebDentalClinic.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Nurse.cshtml";
}
<style>
       @Styles.Render("~/Content/main.css")
</style>
<h2 style="text-align:center">Danh Sách Nhân Viên</h2>
<div class="container body-content">
   
    @using (Html.BeginForm("Index", "RegisterEmloyee", FormMethod.Get))

    {

        <p style="padding-left:100px;">

            Nhập Số Điện Thoại :
            <span style="border:solid;"> @Html.Editor("SearchString")</span>
            <input type="submit" value="Tìm kiếm" class="btn btn-info" />

        </p>


    }


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaNhanVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamSinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaChucVu)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamSinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CHUCVU.TenChucVu)
                </td>

                <td>
                    @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.MaNhanVien }) |

                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhanVien })
                </td>
            </tr>
        }

    </table>
</div>