@model WebDentalClinic.Models.NHANVIEN

@{
    ViewBag.Title = "ProfileBacSi";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container-login100">
        <div class="col-md-8">
            <div class="wrap-login100" style="        text-align: center;  padding: 1px 0px 1px 1px;">

                <div class="col-md-12">
                    <div class="form-horizontal">
                        <h2 style="text-align:center;">Thông Tin Cá Nhân</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.MaNhanVien, new { htmlAttributes = new { @class = "form-control", @readonly=true} })
                                @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-4" })
