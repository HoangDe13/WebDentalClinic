                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
