@model  IEnumerable < WebDentalClinic.Models.PHIEUKHAM>

@{
    ViewBag.Title = "MedicalExamination";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
}

<div class="container contact-form">
    <h2>Lịch sử khám</h2>

    @*
            Cái này để nháp
        <div class="form-group">
            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>

    *@

    <div class="col-md-10">
        <div class="form-group">
            <p style="color:white">Lịch sử đã khám: </p>
            <select name="dateOfExamination" style="max-width:700px; margin-bottom:7px; color:black; margin-top:auto">
                <option></option>
            </select>
        </div>
        <div class="form-group">

            <table class="table" border="1">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NgayKham)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GioKham)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BENHNHAN.HoTen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CHITIETPHIEUKHAM.DICHVU.TenDichVu)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CHITIETPHIEUKHAM.GhiChu)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <center>@Html.DisplayFor(modelItem => item.NgayKham)</center>
                        </td>
                        <td>
                            <center>@Html.DisplayFor(modelItem => item.GioKham)</center>
                        </td>
                        <td>
                            <center>@Html.DisplayFor(modelItem => item.BENHNHAN.HoTen)</center>
                        </td>
                        <td>
                            <center>@Html.DisplayFor(modelItem => item.CHITIETPHIEUKHAM.DICHVU.TenDichVu)</center>
                        </td>
                        <td>
                            <center>@Html.DisplayFor(modelItem => item.CHITIETPHIEUKHAM.GhiChu)</center>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>




</div>
