@model IEnumerable<WebDentalClinic.Models.PHIEUKHAM>
@using WebDentalClinic.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<KeyValuePair<WebDentalClinic.Models.PHIEUKHAM, IEnumerable<WebDentalClinic.Models.PHIEUKHAM>>>
@{
    ViewBag.Title = "MedicalExaminationListHistory";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}
<br />
<br />
<br />
<center><h2>LỊCH SỬ KHÁM BỆNH</h2></center>

<hr />
<div class="container body-content">
    @using (Html.BeginForm("MedicalExaminationListHistory", "Dentist", FormMethod.Get))
    {
        <p>

            Nhập Tên Bệnh Nhân :
            @Html.TextBox("SearchString")
            Nhập Ngày :
            @Html.TextBox("SearchDate", null, new { @type = "date" })
            <input type="submit" value="Tìm kiếm" class="btn btn-info" />

        </p>
    }
    <div>



        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaPhieuKham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NHANVIEN.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BENHNHAN.HoTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayKham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GioKham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayTaiKham)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTaTrieuChung)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TinhTrang)
                </th>

                <th></th>
            </tr>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.MaPhieuKham)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.NHANVIEN.HoTen)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.BENHNHAN.HoTen)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.NgayKham)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.GioKham)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.NgayTaiKham)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.MoTaTrieuChung)</center>

                    </td>
                    <td>
                        <center>@Html.DisplayFor(modelItem => item.TinhTrang)</center>
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "MedicalExaminationHistory", new { id = item.MaPhieuKham })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>

    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))


