@model WebDentalClinic.Models.HOADONTHANHTOAN

@{
    ViewBag.Title = "InvoiceHistory";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
}

<div class="container contact-form">

    <h2>Tra cứu hóa đơn</h2>
    <hr>

    <div class="row ">


        <h2 style="color:white">Tìm hóa đơn cũ</h2>

        <div class="col-md-4">
            <div class="form-group">
                <label>Chọn ngày giờ đã thanh toán </label>
            </div>
            <select name="dateOfInvoice" style="max-width:300px; color:black; margin-top:auto">
                <option>@Html.DisplayFor(model => model.NgayLap)</option>
                
            </select>

            <div class="form-group">
                <button style="width:100px; margin-left:20px; margin-top:7px" class="btn btn-primary btn-block ">Tìm kiếm</button>
            </div>
        </div>

        <div class="col-md-8">


            <div class="col-md-10">
                <div class="form-group">
                    <label>Mã hóa đơn</label>
                    <input type="text" class="form-control" style="max-width:600px;" />
                </div>
                <div class="form-group">
                    <label>Ngày thánh toán</label>
                    <input type="datetime" class="form-control" style="max-width:600px" />
                </div>
                <div class="form-group">
                    <label>Dịch vụ đã khám</label>
                    <input type="text" class="form-control" style="max-width:600px" />
                </div>

                <div class="form-group">
                    <label>Ghi Chú</label>
                    <textarea class="form-control" cols="60" rows="5" style="max-width:600px"></textarea>
                </div>
                <div class="form-group">
                    <label>Thành tiền</label>
                    <input type="number" class="form-control" style="max-width:600px" />
                </div>
            </div>

        </div>

    </div>
</div>

