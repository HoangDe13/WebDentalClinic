                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.TongTien, "Dịch vụ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" name="idHoaDon">
                            @Html.ActionLink("Chi tiết", "TinhTongTien", new { id = Model.MaHoaDon })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Danh Sách Hóa Đơn", "HoaDon", null, new { @class = "btn btn-info" })
                            <input type="submit" value="Xác nhận thanh toán" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
