@model IEnumerable<WebDentalClinic.Models.PHIEUKHAM>
@{
    ViewBag.Title = "MedicalExaminationList";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}

<center><h2>DANH SÁCH KHÁM BỆNH</h2></center>

<hr />


<div class="form-group">
    <label>Chọn ngày khám bệnh</label>
</div>

<select name="dateOfExamination" style="max-width:300px; color:black; margin-top:auto">
    <option>
        @Html.DisplayNameFor(model => model.NgayKham)
    </option>
</select>

<div class="form-group">
    <label>Chọn giờ khám bệnh</label>
</div>
<select name="dateOfExamination" style="max-width:300px; color:black; margin-top:auto">
    <option>
        @Html.DisplayNameFor(model => model.GioKham)
    </option>
</select>

<div class="form-group">
    <button style="width:100px; margin-left:20px; margin-top:10px" class="btn btn-primary btn-block ">Tìm kiếm</button>
</div>

<div>

    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayKham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioKham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTaiKham)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTaTrieuChung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BENHNHAN.HoTen)
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>

        @*Vẫn chưa có cái phiếu khám cho nó nên bị null*@

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.NgayKham)</center>
                    
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.GioKham)</center>
                    
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.NgayTaiKham)</center>
                    
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.MoTaTrieuChung)</center>
                    
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.TinhTrang)</center>
                    
                </td>
                <td>
                    <center>@Html.DisplayFor(modelItem => item.BENHNHAN.HoTen)</center>
                    
                </td>
                <td>
                    <select name="confirm" id="confirm">
                        <option value="Confirm">Xác nhận</option>
                        <option value="Unconfirm">Chưa xác nhận</option>
                    </select>
                </td>
                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaPhieuKham }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaPhieuKham }) |
                    @Html.ActionLink("Hủy Lịch", "Cancel", new { id = item.MaPhieuKham })
                </td>
            </tr>
        }

    </table>
</div>