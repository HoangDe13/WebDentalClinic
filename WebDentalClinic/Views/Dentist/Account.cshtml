@model WebDentalClinic.Models.NHANVIEN

@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
}

<div class="container contact-form">

    <h2>Thông tin cá nhân Bác sĩ</h2>
    <hr>

    <div class="row ">
        <div class="col-md-6">
            <p style="color:white">@Html.DisplayNameFor(model => model.HoTen) : @Html.DisplayFor(model =>model.HoTen)</p>
            <p style="color:white">@Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)</p>
            <p style="color:white">@Html.DisplayNameFor(model => model.SoDienThoai) : @Html.DisplayFor(model => model.SoDienThoai)</p>
            <p style="color:white">@Html.DisplayNameFor(model => model.NamSinh) : @Html.DisplayFor(model => model.NamSinh)</p>
            <p style="color:white">@Html.DisplayNameFor(model => model.GioiTinh) : @Html.DisplayFor(model => model.GioiTinh)</p>
            <p style="color:white">@Html.DisplayNameFor(model => model.DiaChi) : @Html.DisplayFor(model => model.DiaChi)</p>
        </div>

        <h2 style="color:white">Cập nhật thông tin cá nhân</h2>

        <div class="col-md-6">
            <div class="form-group">
                <label>Họ Tên</label>
                <input type="text" class="form-control" style="max-width:400px" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" style="max-width:400px" />
            </div>
            <div class="form-group">
                <label>Số Điện Thoại</label>
                <input type="text" class="form-control" style="max-width:400px" />
            </div>
            <div class="form-group">
                <label>Ngày-Tháng-Năm sinh</label>
                <input type="text" class="form-control" style="max-width:400px" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" style="max-width:400px" />
            </div>
            <div class="form-group">
                <button style="width:280px" class="btn btn-primary btn-block ">Lưu lại </button>
            </div>
        </div>
    </div>
</div>



