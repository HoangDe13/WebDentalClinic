@model WebDentalClinic.Models.PHIEUKHAM

@{
    ViewBag.Title = "MedicalExamination";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
}

<div class="container contact-form">

    <h2>Chi tiết khám bệnh</h2>
    <hr>

    <div class="row ">
        <div class="col-md-6">

            <p style="color:white">Ngày giờ khám hiện tại: </p>
            <select name="dateOfExamination" style="max-width:700px; margin-bottom:7px; color:black; margin-top:auto">
                <option>@Html.DisplayFor(model => model.NgayKham)</option>
            </select>

            <h2>Lịch sử khám</h2>

            <div class="col-md-10">
                <div class="form-group">
                    <p style="color:white">Lịch sử đã khám: </p>
                    <select name="dateOfExamination" style="max-width:700px; margin-bottom:7px; color:black; margin-top:auto">
                        <option>@Html.DisplayFor(model => model.NgayKham)</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Dịch vụ</label>
                    <input type="text" class="form-control" style="max-width:600px" />
                </div>
                <div class="form-group">
                    <label>Ghi Chú</label>
                    <textarea class="form-control" cols="60" rows="5" style="max-width:600px"></textarea>
                </div>
            </div>

        </div>

        <h2 style="color:white">Cập nhật thông tin điều trị</h2>

        <div class="col-md-6">
            <div class="form-group">
                <label>Dịch vụ</label>
                <input type="text" class="form-control" style="max-width:600px" />
            </div>
            <div class="form-group">
                <label>Triệu chứng</label>
                <input type="text" class="form-control" style="max-width:600px" />
            </div>
            <div class="form-group">
                <label>Hẹn tái khám</label>
                <input type="datetime" class="form-control" style="max-width:600px" />
            </div>
            <div class="form-group">
                <label>Ghi Chú</label>
                <textarea class="form-control" cols="60" rows="5" style="max-width:600px"></textarea>
            </div>

            <div class="form-group">
                <button style="width:300px" class="btn btn-primary btn-block ">Xác nhận thay đổi</button>
            </div>
        </div>
    </div>
</div>






