@model WebDentalClinic.Models.CHITIETPHIEUKHAM

@{
    ViewBag.Title = "EditChiTiet";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
    int MaPhieuKham = ViewBag.MaPhieuKham;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="login100-form-title" style="width:100%;">CẬP NHẬT CHI TIẾT PHIẾU KHÁM</h2>
        <div class="limiter">
            <div class="col-md-12 col-sm-12">
                @Html.ActionLink("Danh Sách Khám Bệnh", "MedicalExaminationList", new { id = MaPhieuKham }, new { @class = "btn btn-info" })

                <div class="col-md-12 col-md-offset-3">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaChiTietPhieuKham)

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaPhieuKham, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaPhieuKham, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaPhieuKham, "", new { @class = "text-danger" })
                            @*   @Html.ActionLink("Tra Cứu", "MedicalExaminationList", "Dentist")*@
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDichVu, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @{Html.RenderAction("SelectDichVu", "Dentist");
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Danh Sách Chi Tiết Phiếu Khám", "MedicalExamination", new { id = MaPhieuKham }, new { @class = "btn btn-info" })
                            <input type="submit" value="Cập Nhật" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

