@model WebDentalClinic.Models.HOADONTHANHTOAN

@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/_LayoutDentist.cshtml";
}



@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
}

<div class="container contact-form">

    <h2>Hóa đơn thanh toán</h2>
    <hr>


    <div class="col-md-8" style="margin-left:250px">
        @{ 
            Model.NgayLap = DateTime.Now;
        }

        <div class="col-md-10">
            <div class="form-group">
                <label>Mã hóa đơn</label>
                <input type="text" class="form-control" style="max-width:600px;" />
            </div>
            <div class="form-group">
                <label>Ngày thánh toán</label>
                <select name="dateOfExamination" style="max-width:700px; margin-bottom:7px; color:black; margin-top:auto">
                    <option>@Html.DisplayFor(model => model.NgayLap)</option>
                </select>
            </div>

            <div class="form-group">
                <label>Dịch vụ đã khám</label>
                <input type="text" class="form-control" style="max-width:600px" />
            </div>
            <div class="form-group">
                <label>Người thanh toán</label>
                <input type="text" class="form-control" style="max-width:600px" />
            </div>

            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" class="form-control" style="max-width:600px" />
            </div>

            <div class="form-group">
                <label>Ghi Chú</label>
                <textarea class="form-control" cols="60" rows="5" style="max-width:600px"></textarea>
            </div>
            <div class="form-group">
                <label>Thành tiền</label>
                <input type="number" class="form-control" style="max-width:600px" />
            </div>

            <div class="form-group">
                <button style="width:300px; margin-left:100px; margin-top:7px" class="btn btn-primary btn-block ">Xác nhận thanh toán</button>
            </div>
        </div>

    </div>

</div>











