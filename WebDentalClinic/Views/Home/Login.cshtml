@model WebDentalClinic.Models.BENHNHAN

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V1</title>
    <meta charset="UTF-8">

</head>

<body>
    @using (Html.BeginForm("Login", "Home"))
    {
        @Html.AntiForgeryToken();
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">

                    <div class="col-md-8">

                        <div class="login100-pic js-tilt" data-tilt>
                            <video width="85%" autoplay style="border-radius:20px 20px 20px 20px">
                                <source src="../Content/images/dangnhap.mp4" type="audio/mp4">
                            </video>
                        </div>



                    </div>
                    <div class="col-md-4 col-sm-12">
                        <form class="login100-form validate-form">


                            <div class="form-horizontal">
                                <div class="wrap-input100 validate-input">
                                    <div class="form-horizontal">
                                        <h2 style="font-family:'Times New Roman'">Đăng Nhập</h2>
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group">

                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Số Điện Thoại" } })
                                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                                        <div class="form-group">

                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", placeholder = "Mật Khẩu", type = "password" } })
                                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Đăng Nhập" class="btn btn-default" style="background-color:darkgreen; color:white" />
                                        </div>
                                    </div>

                                    <div class="form-horizontal">
                                        <span class="txt1">
                                          
                                        </span>
                                        <a class="txt2" href="~/Home/ForgotPassword">
                                            Quên Mật Khẩu ?
                                        </a>
                                    </div>

                                    <div class="form-horizontal">
                                        <a class="txt2" href="~/Home/Register">
                                            Đăng kí tài khoản
                                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    }

</body>

</html>



