@{
    ViewBag.Title = "Contact";
}

@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Contact.css" />
    }

<div class="container contact-form bodi">

    <h2 style="color:white">Liên Hệ</h2>
    <hr>

    <div class="row ">
        <div class="col-md-6">
            <p style="color:white">Địa Chỉ: 115 Sư Vạn Hạnh, phường 13, Quận 10, TP.HCM </p>
            <p style="color:white">Email: NhaKhoa@gmail.com</p>
            <p style="color:white">Phone: 037.889929</p>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1959.734551858924!2d106.66715895051935!3d10.775338099054041!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f9023a3a85d%3A0xdee5c99a7b02feab!2sHuflit!5e0!3m2!1svi!2s!4v1618631819838!5m2!1svi!2s"  style="border:0; width:400px; height:320px"  allowfullscreen="" loading="lazy"></iframe>
        </div>
        <form>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Họ Tên</label>
                    <input type="text" class="form-control" placeholder="Vui lòng nhập họ tên..." style="max-width:600px;" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" placeholder="Vui lòng nhập email..." style="max-width:600px;"/>
                </div>
                <div class="form-group">
                    <label>Số Điện Thoại</label>
                    <input type="text" class="form-control" placeholder="Vui lòng nhập số điện thoại..." style="max-width:600px;"/>
                </div>
                <div class="form-group">
                    <label>Ghi Chú</label>
                    <textarea class="form-control" cols="30" rows="5" style="max-width:600px;"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block ">Send </button>
                </div>

            </div>
        </form>
    </div>
</div>

