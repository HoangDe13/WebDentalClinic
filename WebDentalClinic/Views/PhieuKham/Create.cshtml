@model WebDentalClinic.Models.PHIEUKHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout_Nurse.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">


        <div class="limiter">

            <div class="container-login100">
                <div class="wrap-login100">
                    <h2 class="login100-form-title" style="width:100%;">Thêm Phiếu Khám</h2>
                    <div class="col-md-12 col-md-offset-3">
                        <form class="login100-form validate-form">

                            <hr />

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @{Html.RenderAction("SelectNhanVien", "PhieuKham");
                                    }
                                    @Html.ValidationMessageFor(model => model.MaNhanVien, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaBenhNhan, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.MaBenhNhan, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MaBenhNhan, "", new { @class = "text-danger" })

                                    @Html.ActionLink("Tra Cứu", "Index", "CreateProfile")
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayKham, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NgayKham, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NgayKham, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GioKham, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.GioKham, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.GioKham, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayTaiKham, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NgayTaiKham, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NgayTaiKham, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MoTaTrieuChung, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MoTaTrieuChung, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MoTaTrieuChung, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("TinhTrang", new List<SelectListItem>
   { new SelectListItem { Text = "Đã khám", Value = "Đã khám"},
     new SelectListItem { Text = "Chưa khám", Value = "Chưa khám"},
     new SelectListItem { Text = "Đang khám", Value = "Đang khám"}
     }, "Chọn tình trạng", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                                 </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Html.ActionLink("Danh Sách Phiếu Khám", "Index", null, new { @class = "btn btn-info" })
                                    <input type="submit" value="Tạo Phiếu Khám" class="btn btn-success" />


                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
        }

        <div>

        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
