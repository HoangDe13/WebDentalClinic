@model WebDentalClinic.Models.BENHNHAN


@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}


@using (Html.BeginForm("ChangePassword", "Customer"))

{
    @Html.AntiForgeryToken()
    <div class="limiter" style="margin-top:10px">
        <div class="container-login100">
            <div class="col-md-6">
                <div class="wrap-login100" style="text-align:center;">

                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <h2 style="text-align:center; margin-top:10px;">Đổi Mật Khẩu</h2>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaBenhNhan)

                        </div>
                        <div class="form-group">
                            @Html.Label("Mật Khẩu Hiện Tại", htmlAttributes: new { @class = "control-label col-md-4" })

                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MatKhauMoi, htmlAttributes: new { @class = "control-label col-md-4" })

                            @Html.EditorFor(model => model.MatKhauMoi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MatKhauMoi, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Confirmpwdnew, htmlAttributes: new { @class = "control-label col-md-4" })

                            @Html.EditorFor(model => model.Confirmpwdnew, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Confirmpwdnew, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đổi Mật Khẩu" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MatKhau)
                </div>
            </div>
        </div>
    </div>


}

<div>
    @Html.ActionLink("Quay Lại", "Profile")
</div>
