@model WebDentalClinic.Models.BENHNHAN

@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    var BN = Session["BENHNHAN"] as WebDentalClinic.Models.BENHNHAN;
}



@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    <div class="limiter"style="margin-top:10px">
        <div class="container-login100">
            <div class="col-md-6">
                <div class="wrap-login100" style="text-align:center;">

                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <h2 style="text-align:center; margin-top:10px;">Cập Nhật Thông Tin Cá Nhân</h2>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaBenhNhan)

                            <div class="form-group">
                                @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-4" })

                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-4" })

                                @if (Model.GioiTinh == 1)
                                {
                                    @Html.RadioButtonFor(model => model.GioiTinh, "1", new { @checked = true })
                                    @Html.Label("Nam")
                                    @Html.RadioButtonFor(model => model.GioiTinh, "0")
                                    @Html.Label("Nữ")

                                }
                                else
                                {
                                    @Html.RadioButtonFor(model => model.GioiTinh, 1)
                                    @Html.Label("Nam")
                                    @Html.RadioButtonFor(model => model.GioiTinh, 0, new { @checked = true })
                                    @Html.Label("Nữ")

                                }

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NamSinh, htmlAttributes: new { @class = "control-label col-md-4" })

                                @Html.EditorFor(model => model.NamSinh, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NamSinh, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-4" })

                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-4" })

                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Confirmpwd, htmlAttributes: new { @class = "control-label col-md-4" })
                             
                                    @Html.EditorFor(model => model.Confirmpwd, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Confirmpwd, "", new { @class = "text-danger" })
                               
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập Nhật" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MatKhau)
                    </div>
                </div>
                </div>
            </div>
        
        
                }

                <div>
                    @Html.ActionLink("Quay Lại", "Profile")
                </div>
