@model IEnumerable<WebDentalClinic.Models.LICHHEN>

@{
    ViewBag.Title = "ListLichhen";
    Layout = "~/Views/Shared/Layout_Nurse.cshtml";
}

<br />
@using (Html.BeginForm("ListLichhen", "ListLichHen", FormMethod.Get))
{
    <p style="padding-left:300px;">

        Chọn Ngày :

        @Html.TextBox("SearchString", null, new { @type = "date" })
        <input type="submit" value="Tìm kiếm" class="btn btn-info"/>

    </p>
}


<p>
    @Html.ActionLink("Tạo Lịch Hẹn", "CreateLichHenYTA")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaLichHen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayHen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioHen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TinhTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaNhanVien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GhiChu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLichHen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayHen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioHen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaNhanVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                @Html.ActionLink("Xác Nhận", "Edit", new { id = item.MaLichHen }) |

                @Html.ActionLink("Xóa", "Delete", new {  id=item.MaLichHen  })
