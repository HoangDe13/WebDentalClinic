@using PagedList.Mvc;
@model PagedList.PagedList<WebDentalClinic.Models.LICHHEN>


@{
    ViewBag.Title = "ListLichhen";
    Layout = "~/Views/Shared/Layout_Nurse.cshtml";
}

<br />
@using (Html.BeginForm("ListLichhen", "ListLichHen", FormMethod.Get))
{
    <p style="padding-left:300px;">

        Chọn Ngày :
        @Html.TextBox("SearchString", null, new { @type = "date" })
        <input type="submit" value="Tìm kiếm" class="btn btn-info" />

    </p>
}
<div class="container body-content">
    <p>
        @Html.ActionLink("Tạo Lịch Hẹn", "CreateLichHenYTA")
    </p>
    <table class="table">
        <tr>
            <th>
                <p>Mã Lịch Hẹn</p>
            </th>
            <th>
                <p>Họ Tên</p>
            </th>
            <th>
                <p>Số Điện Thoại</p>
            </th>
            <th>
                <p>Ngày Hẹn</p>
            </th>
            <th>
                <p>Giờ Hẹn</p>
            </th>
            <th>
                <p>Tình Trạng</p>
            </th>
            <th>
                <p>Mã Nhân Viên</p>
            </th>
            <th>
                <p>Ghi Chú</p>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLichHen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayHen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioHen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhTrang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNhanVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GhiChu)
                </td>
                <td>
                    @Html.ActionLink("Xác Nhận", "Confirm", new { id = item.MaLichHen }) |
                    @Html.ActionLink("Cập Nhật", "Edit", new { id = item.MaLichHen })|
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaLichHen })
                </td>
            </tr>
        }
        <p>* CXN= Chưa Xác Nhận</p>
        <p>* DXN= Đã Xác Nhận</p>
    </table>
    <br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("ListLichhen", new { page }))

</div>

