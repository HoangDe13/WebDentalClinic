@model WebDentalClinic.Models.LICHHEN

@{
    ViewBag.Title = "CreateLichHen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                <div class="col-md-8">
                    <div class="form-horizontal">
                        <h2>Đặt Lịch Hẹn</h2>

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NgayHen, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.NgayHen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GioHen, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.GioHen, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GioHen, "", new { @class = "text-danger" })

                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                            @{
                                Html.RenderAction("SelectBacSi", "LichHen");
                            }
                            
                           
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-6">
                                <input type="submit" value="Đặt Lịch Hẹn" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="login100-pic js-tilt" data-tilt>
                        <video width="120%"  autoplay style="margin-top:50px; margin-left:-200px;border-radius:20px 20px 20px 20px">
                            <source src="../Content/images/dangnhap.mp4" type="audio/mp4">
                        </video>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
